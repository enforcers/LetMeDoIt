<h3>Sign up</h3>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}, :defaults => { :input_html => { :class => "span4" } }) do |f| %>

  <%= f.input :email, :as => :email %>
  <%= f.input :username %>
  <%= f.input :about_me, :as => :text, :input_html => { :rows => 10 } %>
  <%= f.input :photo, :as => :image_upload %>
  <%= f.input :password, :as => :password %>
  <%= f.input :password_confirmation, :as => :password %>

  <div class="form-actions">
    <%= f.submit "Sign up", :class => "btn btn-primary btn-large" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
