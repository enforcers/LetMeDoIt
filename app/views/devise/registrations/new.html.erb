<h3>Sign up</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  <% if resource.errors.any? %>
    <div class="box error">
      <%= devise_error_messages! %>
    </div>
  <% end %>

  <%= f.bootstrap_email_field :email %>
  <%= f.bootstrap_text_field :username %>
  <%= f.bootstrap_text_area :aboutMe, :rows => 10 %>
  <%= f.bootstrap_password_field :password %>
  <%= f.bootstrap_password_field :password_confirmation %>

  <div class="form-actions">
    <%= f.submit "Sign up", :class => "btn btn-primary btn-large" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
