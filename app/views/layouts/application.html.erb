<!DOCTYPE html>
<html>
<head>
  <title>Let Me Do It</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :javascript %>
</head>
<body>
  <div id="site-background">
    <div id="site-wrap">
      <div id="site-header">
        <div id="site-user">
          <%= render '/home/login' %>
          <% if user_signed_in? %>
            <%# link_to "Admin", admin_path, :class => "ym-button top-page" if is_admin(current_user) %>
            <%# link_to "My Profile", edit_user_registration_path(current_user), :class => "ym-button top-page" %>
            <%# link_to "Logout", destroy_user_session_path, :method => 'delete', :class => "ym-button top-page" %>  
          <%else%>
            <%# link_to "Login", new_user_session_path, :class => "ym-button top-page" %>
            <%# link_to "Register", new_user_registration_path, :class => "ym-button top-page" %>  
          <%end%>
        </div>
        <div id="site-logo"><a href="/" title="Home"><img src="/images/logo.png" alt="Home" id="logo"></a></div>
        <div id="site-menu">
          <ul class="menu">
            <li class="leaf first">
              <%= link_to 'Home', root_path %>
            </li>
            <li class="leaf">
              <%= link_to 'Explore Projects', projects_path %>
            </li>
            <li class="leaf last">
              <%= link_to 'Create a Project',new_project_path %>
            </li>
          </ul>
        </div>
      </div>
      <div id="site-content">
        <div id="content-wrapper">
          <%- flash.each do |name, msg| -%>
            <%= content_tag :div, '<span class="icon"></span>'.html_safe + msg, :id => "flash_#{name}", :class => "top-msg #{name}" if msg.is_a?(String) %>
          <%- end -%>
          <%= yield %>
        </div>
      </div>
      <div id="site-footer">
      </div>
    </div>
  </div>
</body>
</html>
