<div id="place-bid" class="modal hide fade" role="dialog" aria-hidden="true" tabindex="-1">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Place a new bid</h3>
  </div>
  <%= form_for([@task.project, @task, Bid.new], :html => { :class => "form-horizontal"}) do |f| %>
    <div class="modal-body">
      <% if user_signed_in? %>
    	  <%= f.hidden_field :user_id, :value => current_user.id %>
      <% end %>
    	<%= f.hidden_field :task_id, :value => @task.id %>
      <%= f.bootstrap_money_field :amount, :class => "span2" %>
      <%= f.bootstrap_text_area :comment, :class => "input-xlarge", :rows => 6 %>
    </div>
    <div class="modal-footer">
      <%= f.submit "Place bid", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>