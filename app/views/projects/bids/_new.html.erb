<div id="place-bid" class="modal hide fade" role="dialog" aria-hidden="true" tabindex="-1">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Place a new bid</h3>
  </div>
  <%= simple_form_for([@task.project, @task, Bid.new], :html => { :class => "form-horizontal"}) do |f| %>
    <div class="modal-body">

      <% if user_signed_in? %>
    	  <%= f.hidden_field :user_id, :value => current_user.id %>
      <% end %>

    	<%= f.hidden_field :task_id, :value => @task.id %>
      <%= f.input :amount, :as => :currency %>
      <%= f.input :comment, :as => :text, :input_html => { :class => "input-xlarge", :rows => 6 } %>

    </div>
    <div class="modal-footer">
      <%= f.submit "Place bid", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>