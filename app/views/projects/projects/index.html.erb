<h3>Projects</h3>
<div class="ym-grid">
	<div class="ym-g20 ym-gl">
		<div class="ym-gbox">
			<div class="nav-wrapper">
				<nav class="ym-vlist">
					<ul>
						<% if params.has_key?(:category_id) %>
							<li>
								<%= link_to "All", projects_path %>
							</li>
						<% else %>
							<li class="active"><strong>All</strong></li>
						<% end %>
					</ul>
					<% @categories.each do |parent| %>
						<h6 class="ym-vtitle"><%= parent.name %></h6>
							<ul>
								<% parent.child_categories.each do |category| %>
									<% if params[:category_id] == category.to_param %>
										<li class="active"><strong><%= category.name %></strong></li>
									<% else %>
										<li>
											<%= link_to category.name, projects_path(:category_id => category) %>
										</li>
									<% end %>
								<% end %>
							</ul>
					<% end %>
				</nav>
			</div>
		</div>
	</div>
	<div class="ym-g80 ym-gr">
		<div class="ym-gbox">
			<table >
				<tr>
					<th width="60%">Project Name</th>
					<th width="20%">Client</th>
					<th width="20%">Tasks Available</th>
				</tr>
				<% @projects.each do |project| %>
					<tr class="project">
						<input type="hidden" value="<%= project.id %>"/>
						<td>
							<%= link_to project_path(project) do %>
								<h5><%= project.name %></h5>
								<span><%= truncate sanitize(project.description, :tags => []), :omission => "... (read more)", :length => 200 %></span>
							<% end %>
						</td>
						<td><%= link_to User.find_by_id(project.user_id).contactName, user_show_path(project.user_id) %></td>
						<td><%= project.available_tasks %>/<%= project.tasks.count %></td>
					</tr>
				<% end %>
			</table>
			<%= will_paginate @projects %>
		</div>
	</div>
</div>