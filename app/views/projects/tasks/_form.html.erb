<%= tinymce_assets %>
<% @task.project_id ||= params[:project_id] %>
<%= simple_form_for [@task.project, @task], :html => { :class => "form-horizontal" }, :defaults => { :input_html => { :class => "span4" } } do |f| %>

  <%= f.input :project_id, :as => :hidden %>
  <%= f.input :name %>
  <%= f.input :due_date, :as => :date_picker %>
  <%= f.input :budget, :as => :currency %>
  <%= f.input :description, :as => :text, :input_html => { class: "tinymce"} %>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary btn-large" %>
    <%= link_to "Cancel", :back, :class => "btn btn-large" %>
  </div>
<% end %>

<%= tinymce %>