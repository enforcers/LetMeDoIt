<h4>Tasks</h4>
<table class="table table-hover">
	<thead>
		<tr>
			<th width="50%">Task Name</th>
			<th width="20%">Due Date</th>
			<th width="20%">Budget</th>
			<th width="10%">Bids</th>
		</tr>
	</thead>
	<tbody>
	<% @tasks.each do |task| %>
		<tr class="project">
			<td><%= link_to task.name, project_task_path(task.project, task) %><% if !task.is_open? %> <i class="icon-lock"><% end %></i></td>
			<td><%= task.due_date %></td>
			<td><%= number_to_currency task.budget, :unit => "â‚¬" %></td>
			<td><%= task.bids.count %></td>
		</tr>
	<% end %>
	</tbody>
</table>