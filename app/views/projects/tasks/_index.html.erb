<h4>Tasks</h4>
<div class="ym-grid">
	<div class="ym-gbox">
		<table >
			<tr>
				<th width="50%">Task Name</th>
				<th width="20%">Due Date</th>
				<th width="20%">Budget</th>
				<th width="10%">Bids</th>
			</tr>
			<% @tasks.each do |task| %>
				<tr class="project">
					<td><%= link_to task.name, projects_tasks_show_path(task) %></td>
					<td><%= task.due_date %></td>
					<td><%= number_to_currency task.budget, :unit => "â‚¬" %></td>
					<td>0</td>
				</tr>
			<% end %>
		</table>
	</div>
</div>